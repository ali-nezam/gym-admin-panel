{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-jsx",

    "allowJs": true,
    "checkJs": false,

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "vite.config.js"]
}
